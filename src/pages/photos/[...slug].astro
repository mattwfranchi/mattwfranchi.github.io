---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

export async function getStaticPaths() {
  const collection = await getCollection("photos");
  const albums = await getCollection("albums");

  return collection.map(item => {
    const album = albums.find(a => a.slug === item.data.albumId);
    return {
      params: { 
        slug: item.slug
      },
      props: { item, album }
    };
  });
}

const { item, album } = Astro.props;
---

<Layout title={item.data.title || "Content Detail"}>
  <div class="content-detail-container">
    <div class="max-w-6xl mx-auto p-8">
      <button 
        onclick="history.back()" 
        class="text-cyan-400 hover:text-cyan-300 mb-8 block"
      >
        ‚Üê Back
      </button>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="content-display">
          {item.data.content && (
            <div class="rounded-lg border-4 border-cyan-500/30 p-6 bg-black/30">
              {item.data.content}
            </div>
          )}
        </div>

        <div class="content-info text-cyan-300">
          <h1 class="text-3xl font-bold mb-4">{item.data.title}</h1>
          <p class="text-xl mb-6">{item.data.description}</p>
          
          {item.data.metadata && (
            <div class="metadata-section bg-black/30 p-4 rounded-lg border border-cyan-500/20">
              <h2 class="text-lg font-bold mb-3">Additional Info</h2>
              <div class="grid grid-cols-2 gap-2 font-mono text-sm">
                {Object.entries(item.data.metadata).map(([key, value]) => (
                  <>
                    <div>{key}:</div>
                    <div class="text-cyan-400">{value}</div>
                  </>
                ))}
              </div>
            </div>
          )}
          
          <div class="mt-6">
            <p class="text-cyan-400">
              From collection: <a href={`/albums/${album.slug}`} class="underline hover:text-cyan-300">{album.data.title}</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .content-detail-container {
    @apply min-h-screen bg-gradient-to-b from-gray-900 to-gray-800;
  }

  .metadata-section {
    @apply backdrop-blur-sm;
  }

  .content-display {
    @apply flex items-start justify-center;
  }
</style>